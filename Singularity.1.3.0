Bootstrap: docker
From: ubuntu:16.04

%labels
Maintainer Matthew Flister

%help
This container runs PyTorch 1.3.0.

%environment
    # nvidia driver libs specific cuda version libs are mounted by --bind command at run
    # required for GPU enabled container
    SHELL=/bin/bash
    PATH="/nvidia:$PATH"
    LD_LIBRARY_PATH="/nvidia:$LD_LIBRARY_PATH"
    export SHELL PATH LD_LIBRARY_PATH 

%post
    # default mount points
    mkdir -p /scratch/global /scratch/local /rcc/stor1/refdata /rcc/stor1/projects /rcc/stor1/depts

    # NVIDIA dirver mount points
    mkdir /nvidia 
    touch /usr/bin/nvidia-smi

    # Install necessary packages
    apt-get update && apt-get install -y --no-install-recommends \
        build-essential \
        gcc-multilib \
        libatlas-base-dev \
        libboost-all-dev \
        libhdf5-serial-dev \
        libprotobuf-dev \
        protobuf-compiler \
        libopenblas-dev \
        liblapack-dev \
        gfortran \
        libcurl4-openssl-dev \
        python-pip \
        python3-pip \
        pkg-config \
        python-dev \
        python3-dev \
        python-setuptools \
        python3-setuptools
    apt-get clean

    # Update pip
    python -m pip install --no-cache-dir --upgrade pip
    python3 -m pip install --no-cache-dir --upgrade pip

    # Install PyTorch GPU
    export PT_BINARY_URL=https://download.pytorch.org/whl/cu101/torch-1.3.0-cp27-cp27mu-manylinux1_x86_64.whl
    python -m pip install --no-cache-dir --ignore-installed --upgrade $PT_BINARY_URL

    # Install python packages
    python -m pip install --no-binary --upgrade \
        dominate \
        torchvision \
        visdom \
        Pillow \
        Augmentor \
        keras \
        tflearn \
        numpy \
        nibabel \
        h5py \
        scikit-learn \
        pandas \
        scipy \
        matplotlib \
        ipykernel \
        jupyter \
        jupyterlab \
        pydicom \
        opencv-python \
        tables \
        tqdm \
        scikit-image \
        tensorboard

    # Install PyTorch GPU
    export PT_BINARY_URL=https://download.pytorch.org/whl/cu101/torch-1.3.0-cp35-cp35m-manylinux1_x86_64.whl 
    python -m pip install --no-cache-dir --ignore-installed --upgrade $PT_BINARY_URL

    # Install python packages
    python3 -m pip install --no-binary --upgrade \
        dominate \
        torchvision \
        visdom \
        Pillow \
        Augmentor \
        keras \
        tflearn \
        numpy \
        nibabel \
        h5py \
        scikit-learn \
        pandas \
        scipy \
        matplotlib \
        ipykernel \
        jupyter \
        jupyterlab \
        pydicom \
        opencv-python \
        tables \
        tqdm \
        scikit-image \
        tensorboard
